{% extends "::base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{{ post.title }}</h1>

        <a href="{{ url('blog_list') }}">Blog</a> |
        <a href="{{ url('post_create') }}">Create</a>
        <a href="{{ url('tracker_dashboard') }}" target="_blank" class="pull-right">Dashboard</a>
    </div>

    <div>{{ post.description | raw }}</div>

    <br>
    <b>Date: </b>{{ post.datetime | date('d-m-Y H:m:s') }}

{% endblock %}

{% block javascripts %}
    {% include("TrackerBundle:Tracker:tracker.html.twig") %}
{% endblock %}
